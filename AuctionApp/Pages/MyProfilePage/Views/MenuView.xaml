<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:AuctionApp.Controls"
             xmlns:local="clr-namespace:AuctionApp"
             x:Class="AuctionApp.Pages.MyProfilePage.Views.MenuView">
    <ScrollView >
        <VerticalStackLayout>
            <controls:CustomButton Text="Профиль" Margin="0,10" Tag="{x:Static local:RoutesConstants.MY_PROFILE_VIEW}" Clicked="MenuItem_Clicked"/>
            <controls:CustomButton Text="Мои адреса" Margin="0,10" Tag="{x:Static local:RoutesConstants.MY_ADRESSES_VIEW}" Clicked="MenuItem_Clicked"/>
            <controls:CustomButton Text="История покупок" Margin="0,10" Tag="{x:Static local:RoutesConstants.MY_PURCHASINGS_VIEW}" Clicked="MenuItem_Clicked"/>
            <controls:CustomButton Text="История продаж" Margin="0,10" Tag="{x:Static local:RoutesConstants.MY_SELLINGS_VIEW}" Clicked="MenuItem_Clicked"/>
            <controls:CustomButton Text="Обзоры на мои товары" Margin="0,10"/>
            <controls:CustomButton Text="Комментарии к моим товарам" Margin="0,10"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentView>
